	}
	void enableBoton(boolean yes){
		if(form==REGISTRAR){
			btnRegistrar.setEnabled(!yes);
		}
		if(form==NOTREGISTRAR){
			btnRegistrar.setEnabled(yes);
		}
	}
}

	
